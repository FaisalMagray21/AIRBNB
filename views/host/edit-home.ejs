<%- include('../partials/head') %>
    </head>

    <body class="bg-gray-100 min-h-screen">
        <%- include('../partials/nav') %>

            <main class="container mx-auto py-10">
                <h1 class="text-3xl font-bold text-red-500 mb-6 text-center">
                    <%= editing ? "Edit" : "Add" %> Your Home
                </h1>
                <form action="/host/<%= editing ? 'edit-home' : 'add-home' %>" method="post" class="bg-white p-6 rounded-lg shadow-lg max-w-lg mx-auto">
                    <input type="hidden" name="id" value="<%= editing ? home.identify : " " %>" />
                    <!-- Photo -->
                    <div class="mb-4">
                        <label for="photourl" class="block text-gray-700 font-medium mb-2">Photo URL</label>
                        <input type="text" id="photourl" name="photourl" value="<%= editing ? home.photourl : " " %>" placeholder="Upload a photo" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    </div>

                    <!-- House Name -->
                    <div class="mb-4">
                        <label for="houseName" class="block text-gray-700 font-medium mb-2">House Name</label>
                        <input type="text" id="houseName" name="houseName" value="<%= editing ? home.houseName : " " %>" placeholder="Enter the house name" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:outline-none" required
                        />
                    </div>

                    <!-- Price -->
                    <div class="mb-4">
                        <label for="price" class="block text-gray-700 font-medium mb-2">Price</label>
                        <input type="number" id="price" name="price" value="<%= editing ? home.price : " " %>" placeholder="Enter the price" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:outline-none" min="0" step="0.01" required
                        />
                    </div>

                    <!-- Location -->
                    <div class="mb-4">
                        <label for="location" class="block text-gray-700 font-medium mb-2">Location</label>
                        <input type="text" id="location" name="location" value="<%= editing ? home.location : " " %>" placeholder="Enter the location" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:outline-none" required />
                    </div>

                    <!-- Rating -->
                    <div class="mb-4">
                        <label for="rating" class="block text-gray-700 font-medium mb-2">Rating</label>
                        <input type="number" id="rating" name="rating" value="<%= editing ? home.rating : " " %>" placeholder="Enter the rating (1-5)" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:outline-none" min="1" max="5"
                            step="0.1" required />
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center">
                        <input type="submit" value="<%= editing ? " Update " : "Add " %> Home" class="bg-blue-500 text-white font-medium px-6 py-2 rounded-md hover:bg-blue-600 transition" />
                    </div>

                </form>
            </main>
    </body>

    </html>